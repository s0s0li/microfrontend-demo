{
  "name": "host",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "host/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/host",
        "index": "host/src/index.html",
        "baseHref": "/",
        "main": "host/src/main.ts",
        "tsConfig": "host/tsconfig.app.json",
        "assets": ["host/src/favicon.ico", "host/src/assets"],
        "styles": ["host/src/styles.css"],
        "scripts": [],
        "webpackConfig": "host/webpack.config.ts"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "host/src/environments/environment.ts",
              "with": "host/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false,
          "webpackConfig": "host/webpack.config.prod.ts"
        }
      }
    },
    "serve": {
      "executor": "@nx/react:module-federation-dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "host:build",
        "hmr": true,
        "port": 4200
      },
      "configurations": {
        "development": {
          "buildTarget": "host:build:development"
        },
        "production": {
          "buildTarget": "host:build:production",
          "hmr": false
        }
      }
    },
    "serve-static": {
      "executor": "@nx/react:module-federation-static-server",
      "defaultConfiguration": "production",
      "options": {
        "serveTarget": "host:serve"
      },
      "configurations": {
        "development": {
          "serveTarget": "host:serve:development"
        },
        "production": {
          "serveTarget": "host:serve:production"
        }
      }
    }
  }
}
